		    			panel3.add(txtd);

		    			JLabel monthlypayment = new JLabel();
		    			monthlypayment.setText("Monthly payment    :");
		    			monthlypayment.setBounds(100, 800, 80, 30);
		    			panel3.add(monthlypayment);
