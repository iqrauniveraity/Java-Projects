    private void buttonaddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_buttonaddActionPerformed
        Message.setText("");
        DefaultTableModel model =(DefaultTableModel) tbphonebook.getModel();
        if(!txtname.getText().trim().equals("")){
        model.addRow(new Object[]{txtname.getText(),itaddress.getSelectedItem().toString(),txtphone.getText()});
        }else{
            Message.setText("Name Should not be blank");
        }
    }//GEN-LAST:event_buttonaddActionPerformed

    private void buttonupdateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_buttonupdateActionPerformed
        Message.setText("");
        DefaultTableModel model =(DefaultTableModel) tbphonebook.getModel();
        if(tbphonebook.getSelectedRow()==-1){
        if(tbphonebook.getRowCount()==0){
        Message.setText("Table is empty");
        }else{
        Message.setText("You must select a name");
        }
        }else{
        model.setValueAt(txtname.getText(), tbphonebook.getSelectedRow(), 0);
        model.setValueAt(itaddress.getSelectedItem().toString(), tbphonebook.getSelectedRow(), 1);
        model.setValueAt(txtphone.getText(), tbphonebook.getSelectedRow(), 2);
        }
    }//GEN-LAST:event_buttonupdateActionPerformed

    private void buttondeleteMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_buttondeleteMouseClicked
        DefaultTableModel model =(DefaultTableModel) tbphonebook.getModel();
        txtname.setText(model.getValueAt(tbphonebook.getSelectedRow(), 0).toString());
        itaddress.setSelectedItem(model.getValueAt(tbphonebook.getSelectedRow(), 1).toString());
        txtphone.setText(model.getValueAt(tbphonebook.getSelectedRow(), 2).toString());;
        
        
    }//GEN-LAST:event_buttondeleteMouseClicked

    private void buttondeleteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_buttondeleteActionPerformed
        DefaultTableModel model =(DefaultTableModel) tbphonebook.getModel();
            if(tbphonebook.getSelectedRow()==-1){
        if(tbphonebook.getRowCount()==0){
        Message.setText("Table is empty");
        }else{
        Message.setText("You must select a name");
        }
        }else{
                model.removeRow(tbphonebook.getSelectedRow());
            }
    }//GEN-LAST:event_buttondeleteActionPerformed

